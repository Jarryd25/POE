<Window x:Class="Part_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe App" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- First row for the filter section -->
            <RowDefinition Height="Auto"/>
            <!-- Second row for the recipe list -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <!-- TextBox for ingredient filter -->
            <TextBox x:Name="IngredientFilter" Width="200" Margin="0,0,10,0" VerticalAlignment="Center" TextChanged="TxtIngredientFilter_TextChanged"/>
           
        </StackPanel>
    </Grid>
</Window>
